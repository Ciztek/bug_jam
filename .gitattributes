# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Unity text files
*.cs text eol=lf
*.shader text eol=lf
*.cginc text eol=lf
*.hlsl text eol=lf
*.compute text eol=lf

# Unity YAML files
*.meta text eol=lf
*.prefab text eol=lf
*.unity text eol=lf
*.mat text eol=lf
*.anim text eol=lf
*.controller text eol=lf
*.asset text eol=lf

# Unity config files
*.asmdef text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.md text eol=lf

# Image formats (binary)
*.jpeg binary
*.jpg binary
*.png binary
*.gif binary
*.svg binary
*.webp binary
*.psd binary
*.tga binary

# Document formats (binary)
*.pdf binary

# Compressed files (binary)
*.dll binary
*.exe binary
*.zip binary
*.rar binary
*.7z binary

# Audio formats (binary)
*.mp4 binary
*.avi binary
*.mov binary
*.mp3 binary
*.wav binary
*.ogg binary

# 3D model formats (binary)
*.fbx binary
*.obj binary
*.blend binary

# Unity LFS for large binary assets
Assets/**/*.fbx filter=lfs diff=lfs merge=lfs -text
Assets/**/*.psd filter=lfs diff=lfs merge=lfs -text
Assets/**/*.png filter=lfs diff=lfs merge=lfs -text
Assets/**/*.jpg filter=lfs diff=lfs merge=lfs -text
Assets/**/*.mp3 filter=lfs diff=lfs merge=lfs -text
Assets/**/*.wav filter=lfs diff=lfs merge=lfs -text
Assets/**/*.mp4 filter=lfs diff=lfs merge=lfs -text
Assets/**/*.blend filter=lfs diff=lfs merge=lfs -text
